FROM debian:10

# update debian repo
RUN apt update

# install and run nginx
RUN apt install nginx -y && /etc/init.d/nginx/start

# install and configure certbot (https://certbot.eff.org/lets-encrypt/debianbuster-nginx)
RUN apt install certbot python-certbot-nginx -y && certbot --nginx --agree-tos --email vishnu.srivastava@hotmail.com -d the-software.dev -n

# copy nginx configs
COPY NGINX_default.conf /etc/nginx/conf.d/test.conf
