FROM nginx:1.17.3

# update debian repo
RUN apt update

# install and configure certbot (https://certbot.eff.org/lets-encrypt/debianbuster-nginx)
RUN apt install certbot python-certbot-nginx -y && --nginx --agree-tos --email vishnu.srivastava@hotmail.com -d the-software.dev -n

# copy nginx configs
COPY NGINX_default.conf /etc/nginx/conf.d/test.conf
